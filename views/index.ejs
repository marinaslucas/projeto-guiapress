<%- include('partials/header'); %>
<%- include('partials/homenavbar'); %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1>Blog do Guia do Programador</h1>
            <p>Blog realizado no curso de NodeJS, fornecido pela plataforma Guia do Programador.</p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
        </div>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>
<%- include('partials/footer'); %>